<div class="row page-titles">
    <div class="col-lg-12">
    <div class="col-md-5 align-self-center" style="float: left;">
        <h3 class="text-themecolor">Products</h3>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Portfolio</a></li>
            <li class="breadcrumb-item active">Product Lines</li>
        </ol>
    </div>
    <div class="col-md-7 align-self-center text-right" style="float: right;">
        <div class="input-group-prepend" style="float: right;">
        <button type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="text-transform: uppercase;">Create <i class="fa fa-plus"></i></button>
        <div class="dropdown-menu">
                <a class="dropdown-item" routerLink="/Create Product Line"><img src="../assets/images/products/cpl-icon.png"/> Product Line</a>
                <div role="separator" class="dropdown-divider"></div>
                <a class="dropdown-item" routerLink="/Create Product"><img src="../assets/images/products/p-icon.png"/> Products</a>
                <div role="separator" class="dropdown-divider"></div>
                <a class="dropdown-item" routerLink="/Create Release"><img src="../assets/images/products/r-icon.png"/> Releases</a>
            </div>
        </div>
    </div>
</div>
</div>

<div class="col-lg-12">
  <div class="card" style="background-color: #e2e4ec !important;">
      <div class="card-body">
          
            <div class="row">
                    <!-- Column -->
                    <div class="col-md-3">
                        <div class="card"><a routerLink="/Create Product Line">
                            <div class="card-body" style="height: 260px;">
                                <div class="d-flex p-10 no-block" style="padding-top: 50px; text-align: center;">
                                    <div class="align-slef-center" style="width: 100%;">
                                        <h5 class="m-b-0 align-slef-center" style="text-align: center;"><img src="../assets/images/products/create-product-line.png"/></h5>
                                        <h4 class="m-b-0 align-self-center">Create Product Line</h4>
                                    </div>
                                </div>
                            </div></a>
                        </div>
                    </div>
                    <!-- Column -->
                    <div class="col-md-6">
                        <div class="row ">
                    <div class="col-lg-6 col-md-6" *ngFor="let item of productLine">
                            <div class="card"><a   routerLink="/Product_Overview/{{item.product_line_id}}">
                                <div class="card-body">
                                    <div class="d-flex p-10 no-block">
                                        <div class="align-self-center display-6 m-r-10"> </div>
                                        <div class="align-slef-center">
                                            <h5 class="m-b-0">{{item.product_line_name}}</h5>
                                            <h2 class="m-b-0">{{item.count}}</h2>
                                            
                                        </div>
                                    </div>
                                </div></a>
                            </div>
                        </div>
                        <!-- Column -->
                     
                </div>
                </div>
                    <!-- Column -->
                    <div class="  col-md-3">
                            <div class="card m-b-0"><a routerLink="/Create Product">
                                <div class="card-body" style="height: 260px;">
                                    <div class="d-flex p-10 no-block" style="padding-top: 50px; text-align: center;">
                                        <div class="align-slef-center" style="width: 100%;">
                                            <h5 class="m-b-0 align-slef-center" style="text-align: center;"><img src="../assets/images/products/create-products.png"/></h5>
                                            <h4 class="m-b-0 align-self-center">Create Product</h4>
                                        </div>
                                    </div>
                                </div></a>
                            </div>
                        </div>
                    <!-- Column -->
                    <!-- Column -->
                 

      
  </div>
</div>